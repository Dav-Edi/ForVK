<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#232323"
    tools:context=".MainActivity2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tContact1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_launcher_foreground"
            android:gravity="center"
            android:text="First Contact"
            android:textColor="#FFFFFF"
            android:textSize="32dp" />

        <TextView
            android:id="@+id/tContact2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/photo_camera_48px"
            android:gravity="center"
            android:text="Second Contact"
            android:textColor="#FFFFFF"
            android:textColorHint="#FDFDFD"
            android:textSize="32dp" />

        <TextView
            android:id="@+id/longContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/group_48px"
            android:gravity="center"
            android:text="alotoftextabouvVKalotoftextaboutVK"
            android:textColor="#FFFFFF"
            android:textSize="32dp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>